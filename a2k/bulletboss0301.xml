<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
	<action>
		<fire>
			<direction type="aim">(20-$rand*40)*$rank+(10-$rand*20)</direction>
			<speed>8+$rank*8</speed>
			<bullet/>
		</fire>
		<wait>8-$rank*4</wait>
	</action>
	<repeat>
	<times>7+($rank*8)</times>
		<action>
			<fire>
				<direction type="sequence">0</direction>
				<speed>8+$rank*8</speed>
				<bullet/>
			</fire>
			<wait>8-$rank*4</wait>
		</action>
	</repeat>
</action>

</bulletml>
