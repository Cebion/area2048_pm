<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top1">
	<repeat>
	<times>32+($rank*32)</times>
		<action>
			<fire>
				<direction type="aim">$rand*60-30</direction>
				<speed>8.0+$rank*8</speed>
				<bullet/>
			</fire>
			<wait>4-$rank*2</wait>
		</action>
	</repeat>
</action>

<action label="top2">
	<repeat>
	<times>32+($rank*32)</times>
		<action>
			<fire>
				<direction type="aim">180+($rand*60-30)</direction>
				<speed>8.0+$rank*8</speed>
				<bullet/>
			</fire>
			<wait>4-$rank*2</wait>
		</action>
	</repeat>
</action>

</bulletml>
