<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top1">
	<repeat>
	<times>32</times>
		<action>
			<fire>
				<direction type="sequence">7.5</direction>
				<speed>4.0+$rank*4</speed>
				<bullet/>
			</fire>
			<fire>
				<direction type="sequence">180</direction>
				<speed>4.0+$rank*4</speed>
				<bullet/>
			</fire>
			<wait>8-$rank*4</wait>
		</action>
	</repeat>
</action>

<action label="top2">
	<repeat>
	<times>32</times>
		<action>
			<fire>
				<direction type="sequence">-7.5</direction>
				<speed>4.0+$rank*4</speed>
				<bullet/>
			</fire>
			<fire>
				<direction type="sequence">180</direction>
				<speed>4.0+$rank*4</speed>
				<bullet/>
			</fire>
			<wait>8-$rank*4</wait>
		</action>
	</repeat>
</action>

</bulletml>
