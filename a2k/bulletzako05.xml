<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "http://www.asahi-net.or.jp/~cs8k-cyu/bulletml/bulletml.dtd">

<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

<action label="top">
	<repeat>
	<times>1+$rank*4</times>
		<action>
			<fire>
				<direction type="aim">0</direction>
				<speed>3+$rank*3</speed>
				<bullet/>
			</fire>
			<fire>
				<direction type="aim">0</direction>
				<speed>4+$rank*4</speed>
				<bullet/>
			</fire>
			<fire>
				<direction type="aim">0</direction>
				<speed>5+$rank*5</speed>
				<bullet/>
			</fire>
			<fire>
				<direction type="aim">0</direction>
				<speed>6+$rank*6</speed>
				<bullet/>
			</fire>
			<wait>16-$rank*8</wait>
		</action>
	</repeat>
</action>

</bulletml>
